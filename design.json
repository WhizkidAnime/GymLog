{
  "profile_name": "SoftGlass-Mobile-Player-And-TabBar",
  "design_philosophy": "Friendly, high-clarity mobile UI with soft-glass surfaces, large rounded geometry, subtle elevation, and unobtrusive chrome. Prioritize touch targets, safe-area ergonomics, and smooth micro-interactions.",
  "style": {
    "vibe_keywords": ["soft glass", "frosted blur", "rounded pill", "subtle shadow", "airy", "touch-first"],
    "light_mode_bias": 0.6,
    "dark_mode_supported": true,
    "motion_tone": "calm, springy, low-bounce"
  },
  "layout": {
    "device_target": "mobile",
    "grid": { "columns": 4, "gutter": 8, "margin_horizontal": 16 },
    "safe_area": { "bottom_min": 24, "respect_home_indicator": true },
    "content_insets": { "horizontal": 16, "vertical": 12 }
  },
  "tokens": {
    "palette": {
      "neutral": {
        "bg": "#0A0A0A",
        "surface": "rgba(255,255,255,0.16)",
        "surfaceElevated": "rgba(255,255,255,0.22)",
        "stroke": "rgba(255,255,255,0.28)",
        "onSurfaceHigh": "rgba(255,255,255,0.95)",
        "onSurfaceMed": "rgba(255,255,255,0.72)",
        "onSurfaceLow": "rgba(255,255,255,0.56)"
      },
      "accent": {
        "primary": "#FFD25A",
        "primary_high": "#FFE48E",
        "primary_low": "#F4B82C"
      },
      "states": {
        "pressedOverlay": "rgba(255,255,255,0.10)",
        "focusRing": "rgba(255,255,255,0.60)"
      }
    },
    "typography": {
      "family_primary": "SF Pro, Inter, system-ui, sans-serif",
      "title_sm": {"size": 16, "weight": 700, "tracking": -0.2},
      "label_md": {"size": 12, "weight": 600, "tracking": 0},
      "label_sm": {"size": 11, "weight": 500, "tracking": 0.1},
      "meta_sm": {"size": 11, "weight": 400, "tracking": 0.1}
    },
    "spacing": [4, 8, 12, 16, 20, 24, 32],
    "radii": { "xs": 8, "sm": 12, "md": 16, "lg": 20, "xl": 24, "full": 999 },
    "elevation": {
      "z0": { "shadow": "none" },
      "z1": { "shadow": "0 2px 8px rgba(0,0,0,0.25)" },
      "z2": { "shadow": "0 8px 24px rgba(0,0,0,0.35)" }
    },
    "glass": {
      "backdrop_blur": 20,
      "tint_strength": 0.18,
      "specular_highlight": "inset 0 1px 0 rgba(255,255,255,0.45)",
      "stroke": "1px solid rgba(255,255,255,0.28)"
    },
    "icons": {
      "family": "SF Symbols-like",
      "sizes": { "sm": 16, "md": 20, "lg": 24, "xl": 28 },
      "stroke_weight": 2.0,
      "inactive_opacity": 0.6
    },
    "animation": {
      "press_scale": 0.98,
      "spring": { "stiffness": 280, "damping": 26 },
      "fade_duration_ms": 120
    },
    "touch": { "min_target": 44 }
  },
  "components": {
    "bottom_tab_bar": {
      "container": {
        "height": 64,
        "layout": "pill-group",
        "background": "@tokens.palette.neutral.surface",
        "backdrop_blur": "@tokens.glass.backdrop_blur",
        "stroke": "@tokens.glass.stroke",
        "radius": "@tokens.radii.xl",
        "shadow": "@tokens.elevation.z1.shadow",
        "padding_horizontal": 12,
        "padding_vertical": 8,
        "spacing_between_items": 8
      },
      "tab_item": {
        "shape": "pill",
        "radius": "@tokens.radii.lg",
        "padding_horizontal": 14,
        "padding_vertical": 8,
        "icon_size": "@tokens.icons.sizes.lg",
        "label_typography": "@tokens.typography.label_sm",
        "inactive": {
          "bg": "transparent",
          "icon_color": "@tokens.palette.onSurfaceLow",
          "label_color": "@tokens.palette.onSurfaceLow"
        },
        "active": {
          "bg": "rgba(255,255,255,0.16)",
          "icon_color": "@tokens.palette.accent.primary",
          "label_color": "@tokens.palette.onSurfaceHigh"
        },
        "pressed_overlay": "@tokens.palette.states.pressedOverlay",
        "focus_ring": "@tokens.palette.states.focusRing"
      }
    },
    "floating_media_chip": {
      "container": {
        "height": 56,
        "radius": "@tokens.radii.full",
        "background": "linear-gradient(180deg, rgba(255,255,255,0.35), rgba(255,255,255,0.18))",
        "tint_overlay": "@tokens.palette.accent.primary",
        "tint_blend_mode": "soft-light",
        "backdrop_blur": 22,
        "stroke": "@tokens.glass.stroke",
        "shadow": "@tokens.elevation.z2.shadow",
        "internal_gap": 12,
        "padding_horizontal": 12
      },
      "thumbnail": {
        "size": 40,
        "radius": "@tokens.radii.sm",
        "placeholder_style": { "bg": "rgba(255,255,255,0.2)" }
      },
      "text_group": {
        "title_style": { "typography": "@tokens.typography.title_sm", "color": "@tokens.palette.onSurfaceHigh" },
        "subtitle_style": { "typography": "@tokens.typography.meta_sm", "color": "@tokens.palette.onSurfaceMed" },
        "max_lines": { "title": 1, "subtitle": 1 },
        "truncate": "end"
      },
      "controls": {
        "layout": "trailing",
        "buttons": [
          { "role": "previous", "icon": "chevron.backward.fill", "size": 22 },
          { "role": "play_pause", "icon": "playpause.fill", "size": 26 },
          { "role": "next", "icon": "chevron.forward.fill", "size": 22 }
        ],
        "icon_color": "#000000",
        "button_spacing": 8,
        "hit_slop": 8,
        "pressed_overlay": "rgba(0,0,0,0.08)"
      }
    },
    "segmented_control": {
      "height": 40,
      "radius": "@tokens.radii.xl",
      "background": "@tokens.palette.neutral.surface",
      "backdrop_blur": "@tokens.glass.backdrop_blur",
      "thumb": {
        "radius": "@tokens.radii.lg",
        "bg": "rgba(255,255,255,0.22)",
        "shadow": "@tokens.elevation.z1.shadow"
      },
      "label_typography": "@tokens.typography.label_md",
      "active_color": "@tokens.palette.onSurfaceHigh",
      "inactive_color": "@tokens.palette.onSurfaceLow"
    },
    "card": {
      "radius": "@tokens.radii.lg",
      "background": "@tokens.palette.neutral.surfaceElevated",
      "backdrop_blur": 18,
      "stroke": "@tokens.glass.stroke",
      "shadow": "@tokens.elevation.z1.shadow",
      "padding": 12
    },
    "badge": {
      "shape": "pill",
      "radius": "@tokens.radii.full",
      "padding_horizontal": 10,
      "padding_vertical": 6,
      "bg": "rgba(255,255,255,0.20)",
      "label_typography": "@tokens.typography.label_sm",
      "label_color": "@tokens.palette.onSurfaceHigh"
    }
  },
  "patterns": {
    "elevation_system": [
      { "name": "floating", "use_for": ["media_chip"], "shadow": "@tokens.elevation.z2.shadow" },
      { "name": "docked", "use_for": ["tab_bar"], "shadow": "@tokens.elevation.z1.shadow" }
    ],
    "glassmorphism": {
      "rules": [
        "Always pair backdrop blur with a translucent fill and a subtle 1px light stroke.",
        "Add an inset top highlight for specular sheen.",
        "Avoid pure white; use translucent tints and blends."
      ]
    },
    "states": {
      "pressed": { "scale": "@tokens.animation.press_scale", "overlay": "@tokens.palette.states.pressedOverlay" },
      "focused": { "ring": "@tokens.palette.states.focusRing", "ring_width": 2, "offset": 2 }
    },
    "animations": {
      "tab_change": { "type": "spring", "config": "@tokens.animation.spring" },
      "chip_enter": { "type": "fade+slide", "duration_ms": 200, "y": 8 }
    }
  },
  "a11y": {
    "min_contrast_text_on_glass": 4.5,
    "min_touch_target": "@tokens.touch.min_target",
    "supports_dynamic_type": true,
    "reduce_motion_supported": true
  },
  "content_placeholders": {
    "thumbnail": "use generic image or color block",
    "titles": "use neutral placeholder strings",
    "icons": "use system glyphs; no brand marks"
  },
  "do_not_include": [
    "Real artwork or photography from the screenshots",
    "Artist, track, or brand names",
    "Any copyrighted text copied from the UI"
  ],
  "export_guidance": {
    "platforms": ["iOS", "Android", "Web"],
    "rendering_notes": [
      "On iOS, use UIVisualEffectView/BackdropFilter; on Web, use backdrop-filter: blur(px).",
      "Use device safe-area insets for bottom-docked tab bar.",
      "Prefer vector icons at 2.0 stroke for clarity on glass."
    ]
  }
}